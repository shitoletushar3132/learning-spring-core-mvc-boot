<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:aop="http://www.springframework.org/schema/aop"
       xmlns:context="http://www.springframework.org/schema/context"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="
           http://www.springframework.org/schema/beans
           http://www.springframework.org/schema/beans/spring-beans.xsd
           http://www.springframework.org/schema/aop
           http://www.springframework.org/schema/aop/spring-aop.xsd
           http://www.springframework.org/schema/context
           http://www.springframework.org/schema/context/spring-context.xsd">


    <context:annotation-config/>
    <aop:aspectj-autoproxy/>
    <bean id="loggingAspect" class="com.tushar.aspect.LoggingAspect"/>

    <bean id="invoiceEventListener" class="com.tushar.event.InvoiceEventListener"/>


    <!--    DAO-->
    <bean class="com.tushar.dao.ProductDAO" id="productDAO"/>
    <bean class="com.tushar.dao.CustomerDAO" id="customerDAO"/>
    <bean class="com.tushar.dao.InvoiceDAO" id="invoiceDAO"/>
    <bean class="com.tushar.dao.InvoiceItemDAO" id="invoiceItemDAO"/>

<!--    services-->
    <bean class="com.tushar.service.CustomerService" id="customerService"/>
    <bean class="com.tushar.service.InvoiceService" id="invoiceService"/>
    <bean class="com.tushar.service.ProductService" id="productService"/>


    <!-- Console Application -->
    <bean id="consoleApp" class="com.tushar.ConsoleApp">
        <constructor-arg ref="productService"/>
        <constructor-arg ref="customerService"/>
        <constructor-arg ref="invoiceService"/>
    </bean>

    <bean id="dataSource" class="org.springframework.jdbc.datasource.DriverManagerDataSource">
        <property name="driverClassName" value="com.mysql.cj.jdbc.Driver"/>
        <property name="url" value="jdbc:mysql://localhost:3306/billingdb"/>
        <property name="username" value="root"/>
        <property name="password" value="root"/>
    </bean>

    <!-- JdbcTemplate -->
    <bean id="jdbcTemplate" class="org.springframework.jdbc.core.JdbcTemplate">
        <property name="dataSource" ref="dataSource"/>
    </bean>

</beans>